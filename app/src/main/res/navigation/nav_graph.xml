<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.eneskocamaan.kenet.registration.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"/>
        <action
            android:id="@+id/action_splashFragment_to_peersFragment"
            app:destination="@id/peersFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.eneskocamaan.kenet.registration.LoginFragment"
        android:label="Giriş"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_profileSetupFragment"
            app:destination="@id/profileSetupFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_peersFragment"
            app:destination="@id/peersFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileSetupFragment"
        android:name="com.eneskocamaan.kenet.registration.ProfileSetupFragment"
        android:label="Profil Kurulumu"
        tools:layout="@layout/fragment_profile_setup">

        <action
            android:id="@+id/action_profileSetupFragment_to_peersFragment"
            app:destination="@id/peersFragment"
            app:popUpTo="@id/profileSetupFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_profileSetupFragment_to_contactSelectionFragment"
            app:destination="@id/contactSelectionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>

        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/contactSelectionFragment"
        android:name="com.eneskocamaan.kenet.registration.ContactSelectionFragment"
        android:label="Rehberden Seç"
        tools:layout="@layout/fragment_contact_selection" />

    <fragment
        android:id="@+id/peersFragment"
        android:name="com.eneskocamaan.kenet.peer.PeersFragment"
        android:label="Kişiler"
        tools:layout="@layout/fragment_peers">
        <action
            android:id="@+id/action_peersFragment_to_chatDetailFragment"
            app:destination="@id/chatDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/emergencyFragment"
        android:name="com.eneskocamaan.kenet.emergency.EmergencyFragment"
        android:label="Acil Durum"
        tools:layout="@layout/fragment_emergency">

        <action
            android:id="@+id/action_emergencyFragment_to_emergencyMapFragment"
            app:destination="@id/emergencyMapFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/emergencyMapFragment"
        android:name="com.eneskocamaan.kenet.emergency.EmergencyMapFragment"
        android:label="Acil Durum Haritası"
        tools:layout="@layout/fragment_emergency_map" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.eneskocamaan.kenet.settings.SettingsFragment"
        android:label="Ayarlar"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settingsFragment_to_trustedContactsFragment"
            app:destination="@id/trustedContactsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/trustedContactsFragment"
        android:name="com.eneskocamaan.kenet.settings.TrustedContactsFragment"
        android:label="Kişileri Yönet"
        tools:layout="@layout/fragment_trusted_contacts">

        <action
            android:id="@+id/action_trustedContactsFragment_to_contactSelectionFragment"
            app:destination="@id/contactSelectionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/chatDetailFragment"
        android:name="com.eneskocamaan.kenet.ChatDetailFragment"
        android:label="Sohbet">
        <argument
            android:name="deviceAddress"
            app:argType="string" />
        <argument
            android:name="deviceName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>

    <fragment
        android:id="@+id/nav_earthquake"
        android:name="com.eneskocamaan.kenet.earthquake.EarthquakeHostFragment"
        android:label="Deprem Ağı"
        tools:layout="@layout/fragment_earthquake_host" />

</navigation>
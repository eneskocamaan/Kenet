<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_rounded">

        <TextView
            android:id="@+id/tvStatusHeader"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FF5252"
            android:gravity="center"
            android:text="HAREKETSİZ - KRİTİK DURUM"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_user_location_dot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStatusHeader"/>

        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmet Yılmaz"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toTopOf="@+id/imgAvatar"/>

        <TextView
            android:id="@+id/tvDetailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 8824-AX"
            android:textColor="#888888"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvDetailName"
            app:layout_constraintTop_toBottomOf="@+id/tvDetailName"/>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_blood_badge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStatusHeader"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kan Grubu"
                    android:textSize="6sp"
                    android:textColor="#2196F3"/>
                <TextView
                    android:id="@+id/tvBloodType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Rh-"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22FFFFFF"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar"/>

        <LinearLayout
            android:id="@+id/layoutMetrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingVertical="24dp"
            app:layout_constraintTop_toBottomOf="@+id/divider1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_compass_ring"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/imgCompassNeedle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_navigation"
                    app:tint="@color/primary_color"
                    android:rotation="45"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_radar"
                        app:tint="#888888"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DISTANCE"
                        android:textColor="#888888"
                        android:letterSpacing="0.1"
                        android:textSize="10sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:id="@+id/tvDetailDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="m"
                        android:textSize="24sp"
                        android:textColor="#888888"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="6dp"
                        android:layout_gravity="bottom"/>
                </LinearLayout>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Güney Batı"
                    android:textColor="#2196F3"
                    android:textSize="10sp"
                    app:chipBackgroundColor="#1A2196F3"
                    app:chipStrokeWidth="0dp"
                    app:chipMinHeight="24dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lblMoveScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movement Score"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutMetrics"/>

        <TextView
            android:id="@+id/tvMovementWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚠️ STATIONARY (HIGH RISK)"
            android:textColor="#FF5252"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/lblMoveScore"
            app:layout_constraintTop_toTopOf="@+id/lblMoveScore"/>

        <ProgressBar
            android:id="@+id/progressMovement"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="15"
            android:progressDrawable="@drawable/progress_movement_fill_red"
            android:background="@drawable/progress_movement_track"
            app:layout_constraintTop_toBottomOf="@+id/lblMoveScore"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="24dp"
            app:layout_constraintTop_toBottomOf="@+id/progressMovement"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCloseDialog"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="KAPAT"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="#252525"
                app:strokeColor="#444444"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrackTarget"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="TAKİP ET"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_navigation"
                app:iconTint="@color/white"
                app:backgroundTint="#0091EA"
                app:strokeWidth="0dp"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
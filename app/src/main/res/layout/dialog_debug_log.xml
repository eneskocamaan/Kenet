<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#1E1E1E"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2D2D2D"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_info_outline"
            app:tint="#00BCD4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sistem Logları (Terminal)"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_clear_logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMİZLE"
            android:textColor="#FF5252"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="4dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view_logs"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="12dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/tv_log_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loglar bekleniyor..."
            android:textColor="#E0E0E0"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:textIsSelectable="true" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D2D2D"
        android:gravity="end"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_close_logs"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="KAPAT"
            android:textColor="@android:color/white"
            android:backgroundTint="#555555"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>
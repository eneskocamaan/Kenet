<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <View
        android:id="@+id/rippleView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_ripple_ring"
        android:alpha="0"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSosContainer"
        app:layout_constraintEnd_toEndOf="@+id/btnSosContainer"
        app:layout_constraintStart_toStartOf="@+id/btnSosContainer"
        app:layout_constraintTop_toTopOf="@+id/btnSosContainer" />

    <View
        android:id="@+id/rippleView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_ripple_ring"
        android:alpha="0"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSosContainer"
        app:layout_constraintEnd_toEndOf="@+id/btnSosContainer"
        app:layout_constraintStart_toStartOf="@+id/btnSosContainer"
        app:layout_constraintTop_toTopOf="@+id/btnSosContainer" />

    <View
        android:id="@+id/rippleView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_ripple_ring"
        android:alpha="0"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSosContainer"
        app:layout_constraintEnd_toEndOf="@+id/btnSosContainer"
        app:layout_constraintStart_toStartOf="@+id/btnSosContainer"
        app:layout_constraintTop_toTopOf="@+id/btnSosContainer" />

    <ImageButton
        android:id="@+id/btnConnectionStatus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_bluetooth"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/text_secondary"
        android:scaleType="centerInside"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardModeSelector"
        app:layout_constraintBottom_toBottomOf="@+id/cardModeSelector"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardModeSelector"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="#252525"
        app:cardElevation="10dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnConnectionStatus"
        app:layout_constraintEnd_toStartOf="@+id/btnInfo"
        android:layout_marginTop="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/viewSelectionBackground"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_capsule_blue"
                android:backgroundTint="@color/primary_color"
                android:layout_gravity="start"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/btnBle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Bluetooth"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <TextView
                    android:id="@+id/btnWifi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Wi-Fi"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_info_outline"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/text_secondary"
        android:scaleType="centerInside"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardModeSelector"
        app:layout_constraintBottom_toBottomOf="@+id/cardModeSelector"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnSosContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/sos_red"
        app:layout_constraintBottom_toTopOf="@+id/layoutTools"
        app:layout_constraintTop_toBottomOf="@+id/cardModeSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_sos_circle"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_warning"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/tvSosStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BASILI TUT"
                android:gravity="center"
                android:maxLines="2"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="14sp"
                android:textColor="#CCFFFFFF"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:baselineAligned="false"
        android:layout_marginBottom="32dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cardRadar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFlashlight"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:icon="@drawable/ic_flashlight"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetRight="0dp"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FENER"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWhistle"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:icon="@drawable/ic_whistle"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetRight="0dp"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÜDÜK"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScreenStrobe"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:icon="@drawable/ic_phone_android"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetRight="0dp"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLAŞÖR"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLocationCard"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:icon="@drawable/ic_location"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetRight="0dp"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KONUM"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRadar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="30dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_radar"
                app:tint="@color/accent_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HARİTA VE RADARI AÇ"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:letterSpacing="0.05"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>